
<%= form_with(scope: :search, url: search_path, method: :get, local: true) do |f| %>

  <div>
    <%= f.label :visit_time %>
    <%= f.time_field :visit_time %>
  </div>

  <div>
    <%= f.label :store_name %>
    <%= f.text_field :store_name %>
    <%= f.select :search_method, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
  </div>

  <div>
    <%= f.label :prefecture %>
    <%= f.select :prefecture, Store.prefectures.keys.map {|k| [I18n.t("enums.store.prefecture.#{k}"), k]}, options = { include_blank: false } %>
  </div>

  <div>
    <%= f.label :budget %>
    <%= f.number_field :budget %>
  </div>

  <div>
    <%= f.label :visit_day_id %>
    <%= f.collection_select :visit_day_id, Day.all, :id, :name  %>
  </div>

  <div class="actions">
    <%= f.submit "再検索" %>
  </div>

<% end %>

<h4>検索結果</h4>

<div id = 'map'></div>

<% @search_stores.each do |search_store| %>

  <div class = "hidden_store" id = "store_<%= search_store.id %>" >
    <div><%= image_tag search_store.get_store_image("200x200!") %></div>
    <h4><%= search_store.name %></h4>
    <div><%= search_store.store_genre.name %> / <%= search_store.closest_station %></div>
    <div><%= search_store.lowest_price_range %>円 ～ <%= search_store.highest_price_range %>円</div>
    <div>
      <p>営業時間</p>
      <%# cocoom箇所 %>
      <%# 営業時間の存在確認 %>
      <% if search_store.opening_hours.count == 0 %>
        <%# 営業時間なしの場合の表示 %>
        <p>
          営業時間情報なし
        </p>
      <% else %>
        <%# 営業時間がある場合の表示 %>
        <ul>
          <% search_store.opening_hours.each do |opening_hour| %>
            <li>
              <%= opening_hour.opening_time.strftime("%-H:%M") %> ～ <%= opening_hour.closing_time.strftime("%-H:%M") %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div>
      <% search_store.days.order("id").each do |day| %>
        <%= day.name %>
      <% end %>
    </div>
  </div>

<% end %>


<style>
#map {
  height: 600px;
  width: 600px;
}

.hidden_store{
  display: none;
}

</style>

<script>

function initMap() {

  // 変数の使用宣言
  let map;
  let markers = []
  let infoWindows = []
  // 定数の使用宣言＆controllerからインスタンス変数を受け取る
  const search_stores = JSON.parse('<%== @search_stores_json || [] %>')

  // 地図表示
  map = new google.maps.Map(document.getElementById('map'), {
    // 中心位置の設定（lat → 緯度、lng → 経度）
    center: { lat: 34.6937, lng: 135.5021 },
    // 地図の拡大縮小設定
    zoom: 8,
  });

  // 受け取った店舗数分、処理を繰り返す
  for (let i = 0; i < search_stores.length; i++) {

    // 店舗情報を配列に格納する（1データ）
    const search_store = search_stores[i]

    // マーカーを表示
    markers[i] = new google.maps.Marker({
      position: { lat: search_store.lat, lng: search_store.lng },
      map: map,
      id: search_store.id
    });

    // 情報ウィンドウの表示内容
    infoWindows[i] = new google.maps.InfoWindow({
      content: `
        <a href="stores/${search_store.id}">${search_store.name}</a>
      `
    })

    // マーカーをクリックした時の挙動
    markers[i].addListener('click', () => {
      // 情報ウィンドウを開く
      infoWindows[i].open(map, markers[i])

      // 受け取った店舗数分、処理を繰り返す
      for (let j = 0; j < search_stores.length; j++){
        // 店舗idとクリックした店舗idが等しい場合 → hidden_storeクラスを削除（店舗情報を表示）
        // 店舗idとクリックした店舗idが異なる場合 → hidden_storeクラスを追加（店舗情報を非表示）
        if (search_stores[j].id == markers[i].id) {
          $('#store_' + search_stores[j].id).removeClass('hidden_store');
        } else {
          $('#store_' + search_stores[j].id).addClass('hidden_store');
        }
      }

    })
  }
}

</script>
<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['MAPS_JAVASCRIPT_API_KEY'] %>&callback=initMap" async defer></script>
