<% if review.favorited_by?(current_user) %>
  <p>
    <%= link_to review_favorites_path(review.id), method: :delete, remote: true, data: {"turbolinks" => false} do %>
      <span>♡<%= review.favorites.count %>いいね</span>
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to review_favorites_path(review.id), method: :post, remote: true, data: {"turbolinks" => false} do %>
      <span>♡<%= review.favorites.count %>いいね</span>
    <% end %>
  </p>
<% end %>