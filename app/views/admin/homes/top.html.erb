<% if @top_screen_flag == 0 %>
  <h4>店舗一覧</h4>
<% else %>
  <h4><%= @user.name %>さんの店舗登録履歴</h4>
<% end %>

<table class = "table">
  <thead>
    <tr>
      <th>店舗ID</th>
      <th>登録日時</th>
      <% if @top_screen_flag == 0 %>
        <th>登録者</th>
      <% end %>
      <th>登録店舗</th>
      <th>開店ステータス</th>
    </tr>
  </thead>

  <% @stores.each do |store| %>
    <tbody>
      <tr>
        <td><%= store.id %></td>
        <td><%= link_to store.created_at.strftime("%Y/%-m/%-d %H:%M:%S"), admin_store_path(store.id) %></td>
        <% if @top_screen_flag == 0 %>
          <td><%= link_to store.user.name, admin_root_path(user_id: store.user_id) %></td>
        <% end %>
        <td><%= store.name %></td>
        <td>
          <% if store.is_closed == true %>
            <p>閉店</p>
          <% else %>
            <p>開店</p>
          <% end %>
        </td>
      </tr>
    </tbody>
  <% end %>

  <%= paginate @stores %>

</table>
