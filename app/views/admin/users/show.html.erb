<h4><%= @user.name %>さんの会員詳細</h4>

<div>
  <p>会員ID</p>
  <p><%= @user.id %></p>
</div>

<div>
  <p>名前</p>
  <p><%= @user.name %></p>
</div>

<div>
  <p>名前（カナ）</p>
  <p><%= @user.name_kana %></p>
</div>

<div>
  <p>ニックネーム</p>
  <p><%= @user.nickname %></p>
</div>

<div>
  <p>郵便番号</p>
  <p><%= @user.postal_code %></p>
</div>

<div>
  <p>住所</p>
  <p><%= @user.address %></p>
</div>

<div>
  <p>性別</p>
  <p><%= @user.sex_i18n %></p>
</div>

<div>
  <p>電話番号</p>
  <p><%= @user.telephone_number %></p>
</div>

<div>
  <p>メールアドレス</p>
  <p><%= @user.email %></p>
</div>

<div>
  <p>会員ステータス</p>
  <% if @user.is_deleted == true %>
    <p>退会</p>
  <% else %>
    <p>有効</p>
  <% end %>
</div>

<div>
  <%= link_to '編集する', edit_admin_user_path(@user.id) %>
</div>

<div>
  <%= link_to '店舗登録履歴を見る', admin_root_path(user_id: @user.id) %>
</div>
