<h4><%= @user.name %>さんの会員情報編集</h4>

<%= form_with model: @user, url: admin_user_path(@user.id) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :name_kana %><br />
    <%= f.text_field :name_kana %>
  </div>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code %>
  </div>

   <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.collection_radio_buttons :sex, User.sexes_i18n, :first, :last do |b| %>
      <%= b.label(class: "mr-2") { b.radio_button(class: "mr-2") + b.text } %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :telephone_number %><br />
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.radio_button :is_deleted, false %><%= f.label :is_deleted, "有効" %>
		<%= f.radio_button :is_deleted, true %><%= f.label :is_deleted, "退会" %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>

<% end %>

