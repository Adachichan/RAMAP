<h4>会員一覧</h4>

<table class = "table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>会員ステータス</th>
    </tr>
  </thead>

  <% @users.each do |user| %>
    <tbody>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, admin_user_path(user.id) %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.is_deleted == true %>
            <p>退会</p>
          <% else %>
            <p>有効</p>
          <% end %>
        </td>
    </tbody>
  <% end %>
  
  <%= paginate @users %>

</table>
